# along with GnuCOBOL.  If not, see <https://www.gnu.org/licenses/>.

PATH="/root/code/webassembly/cobol-wasm/gnucobol-3.2/libcob/.libs:${PATH}"
PATH="/root/code/webassembly/cobol-wasm/gnucobol-3.2/cobc:/root/code/webassembly/cobol-wasm/gnucobol-3.2/bin:${PATH}"
export PATH


# trigger the preference of local instead of installed files
#GNUCOBOL_UNINSTALLED=1
#export GNUCOBOL_UNINSTALLED

# let atlocal know that there's less to setup
GNUCOBOL_ENV_SETUP=1
export GNUCOBOL_ENV_SETUP

# entries likely referenced in the LIBS entries below
prefix="/root/code/webassembly/cobol-wasm/dist/emscripten"
exec_prefix="${prefix}"

# options that are also used in atlocal (always add to both)
COB_CFLAGS="-I/root/code/webassembly/cobol-wasm/gnucobol-3.2 -pipe -I/root/code/webassembly/cobol-wasm/dist/emscripten/include -I/root/code/webassembly/cobol-wasm/dist/emscripten/include -Wno-unused -fsigned-char -Wno-pointer-sign -Qunused-arguments -Wno-deprecated-non-prototype ${COB_CFLAGS}"
COB_LDFLAGS="-L/root/code/webassembly/cobol-wasm/dist/emscripten/lib ${COB_LDFLAGS}"
COB_LIBS="-L/root/code/webassembly/cobol-wasm/gnucobol-3.2/libcob/.libs -L${exec_prefix}/lib -lcob ${COB_LIBS}"
COB_CONFIG_DIR="/root/code/webassembly/cobol-wasm/gnucobol-3.2/config"
COB_COPY_DIR="/root/code/webassembly/cobol-wasm/gnucobol-3.2/copy"
LD_LIBRARY_PATH="/root/code/webassembly/cobol-wasm/gnucobol-3.2/libcob/.libs:${LD_LIBRARY_PATH}"     # GNU/Linux, Solaris, ...
DYLD_LIBRARY_PATH="/root/code/webassembly/cobol-wasm/gnucobol-3.2/libcob/.libs:{$DYLD_LIBRARY_PATH}" # Mac OS
SHLIB_PATH="/root/code/webassembly/cobol-wasm/gnucobol-3.2/libcob/.libs:${SHLIB_PATH}"               # HP-UX
LIBPATH="/root/code/webassembly/cobol-wasm/gnucobol-3.2/libcob/.libs:${LIBPATH}"                     # AIX
COB_LIBRARY_PATH="/root/code/webassembly/cobol-wasm/gnucobol-3.2/extras:${COB_LIBRARY_PATH}"         # only in pre-inst case: prepend

export COB_CFLAGS COB_LDFLAGS COB_LIBS
export COB_CONFIG_DIR COB_COPY_DIR
export LD_LIBRARY_PATH DYLD_LIBRARY_PATH SHLIB_PATH LIBPATH
export COB_LIBRARY_PATH

# ensure we don't execute windows paths within programs generated by cygwin
# by passing a hint
if test "$OSTYPE" = "cygwin"; then
   COB_ON_CYGWIN=1
   export COB_ON_CYGWIN
fi

# not robust check, but better than none
if test "x${BASH_SOURCE}" != "x" -a "${BASH_SOURCE}" != "$0"; then
	echo "This script should not be sourced but called instead!"
else
	if test "x$1" != "x"; then
		exec "$@"
	else
		$SHELL
	fi
fi
